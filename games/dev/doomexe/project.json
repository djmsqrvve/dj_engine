{
  "id": "doomexe-dev-project",
  "name": "DoomExe",
  "version": "0.1.0",
  "settings": {
    "platforms": ["pc"],
    "default_resolution": { "width": 1920, "height": 1080 },
    "target_fps": 60,
    "vsync": true,
    "pixel_perfect": true,
    "input_profile": "jrpg",
    "localization": {
      "languages": ["en"],
      "default_language": "en"
    },
    "paths": {
      "scenes": "scenes",
      "story_graphs": "story_graphs",
      "database": "database",
      "assets": "assets"
    },
    "autosave": {
      "enabled": true,
      "interval_seconds": 300,
      "max_backups": 5
    }
  },
  "scenes": [
    { "id": "current_scene", "path": "scenes/current_scene.json" }
  ],
  "story_graphs": [
    { "id": "main", "path": "story_graphs/main.json" }
  ]
}
